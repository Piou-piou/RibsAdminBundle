{% extends "@RibsAdmin/base.html.twig" %}

{% block title_page %}
	<h1>List all users</h1>
{% endblock %}

{% block body %}
	<div class="content-block">
		<h2>Activated accoutsn on website</h2>
		<table class="list">
			<thead>
				<tr>
					<td>Profile image</td>
					<td>Firstname Ladtname</td>
					<td>Pseudo</td>
					<td>Reinitialise password</td>
					<td>Archive account</td>
					<td>Delete account</td>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td><img src="http://ribs.anthony-pilloud.fr/app/images/profil/defaut.png"></td>
						<td>{{ user.user.firstname }} {{ user.user.lastname }}</td>
						<td>{{ user.username }}</td>
						<td><a>Reinitialise password</a></td>
						<td><a>Archive this account</a></td>
						<td><a>Delete this account</a></td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6" class="text-center">No account was found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}