{% extends "@RibsAdmin/base.html.twig" %}
{% form_theme form '@RibsAdmin/forms/template.html.twig' %}

{% block body %}
	<div class="ribs-container-fluid">
		{{ form_start(form) }}
		<div class="top-links">
			{% if disabled_form %}
				<a href="{{ path('ribsadmin_packages') }}" class="ribs-button">Return</a>
			{% else %}
				<a href="{{ path('ribsadmin_packages') }}" class="ribs-button danger">Cancel</a>
				{{ form_widget(form.submit) }}
			{% endif %}
		</div>

		<div class="page-title">
			<span>Packages</span>
			<h3>{% if disabled_form %}{{ package.projectName }}{% elseif package.guid %}Edit {{ package.projectName }} {% else %}Create{% endif %}</h3>
		</div>


		<div class="row">
			<div class="cxs-12">
				<div class="block">
					<header>
						<h5>Informations</h5>
					</header>

					<div class="row form-group mt1">
						<div class="cxs-12 cmd-6">
							{{ form_row(form.projectName) }}
						</div>
						<div class="cxs-12 cmd-6">
							{{ form_row(form.projectUrl) }}
						</div>
					</div>
					<div class="row form-group">
						<div class="cxs-12 cmd-6">
							{{ form_row(form.packageName) }}
						</div>
						<div class="cxs-12 cmd-6">
							{{ form_row(form.checkVersionUrl) }}
						</div>
					</div>
					<div class="row form-group">
						<div class="cxs-12 cmd-6">
							{{ form_row(form.composerLockUrl) }}
						</div>
						<div class="cxs-12 cmd-6">
							{{ form_row(form.isLocal) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{ form_end(form) }}

	{% if disabled_form %}
		<div class="ribs-container-fluid">
			<div class="page-title">
				<span>Packagist</span>
				<h3>Informations</h3>
			</div>

			<div class="row">
				<div class="cxs-12">
					<div class="block">
						<header>
							<h5>All verions</h5>
						</header>

						<div class="row">
							<table class="cxs-12">
								{%  for version in versions %}
									<tr>
										<td>{{ version }}</td>
										<td>
											{% if version != package.version %}
												<a href="{{ path('ribsadmin_packages_update_version', {'guid': package.guid, 'install_version': version}) }}">Install</a>
											{% elseif version == package.version  %}
												Current version
											{% endif %}
										</td>
										<td>
											<a href="#" class="open-popup" data-ribspopup data-href="{{ path('ribsadmin_packages') }}" data-popup="update-document-package">
												Archive
											</a>
										</td>
									</tr>
								{% endfor %}
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="ribs-popup" id="update-document-package">
			<div class="content fixed-width">
				<div id="set-content">
					<h2>Are you sure you want to delete this item ?</h2>
					<input type="file" id="my-file" multiple accept="image/jpeg" data-ribs-fileuploader data-retrieve-url-param='{"url": "https://ribs-sf4.anthony-pilloud.fr/ribs-admin/retrieve-uploaded-files"}'>
				</div>

				<div class="link">
					<a class="cancel" data-close>Cancel</a>
					<a href="#" class="validate"  data-validate>Validate</a>
				</div>
				<div class="clear"></div>
			</div>
		</div>
	{% endif %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/ribsadmin/js/edit-package.js', 'ribsadmin') }}"></script>
{% endblock %}