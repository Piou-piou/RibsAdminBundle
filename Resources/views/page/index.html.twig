{% extends "@RibsAdmin/base.html.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/ribs-admin-bundle/css/tynimce_skin.css') }}">
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('build/ribs-admin-bundle/css/tynimce_perso.css') }}">
{% endblock %}

{% block title_page %}
	<h1>Page management </h1>
{% endblock %}

{% block nav_page %}
	<nav class="nav-page">
		{% if navigation is iterable and navigation|length > 0 %}
			<ul>
				{% for i in navigation %}
					<li><a href="{{ i.url }}" title="{{ i.title_tag }}">{{ i.title }}</a></li>
				{% endfor %}
			</ul>
		{% endif %}
	</nav>
{% endblock %}

{% block body %}
	<div class="content-block">
		<textarea name="tinymce" id="tinymce" class="tinymce" cols="30" rows="10"></textarea>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('build/ribs-admin-bundle/js/tinymce.js') }}"></script>
{% endblock %}