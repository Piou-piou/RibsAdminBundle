<!DOCTYPE html>
<html>
	<head>
		<title>Ribs Administration</title>
		<meta charset="UTF-8">
		
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('build/ribs-admin-bundle/css/vendor.css') }}">
			<link rel="stylesheet" href="{{ asset('build/ribs-admin-bundle/css/style.css') }}">
		{% endblock %}
	</head>
	<body>
		<nav class="menu active">
			<div class="title">
				<h1>Ribs V0.1</h1>
				<i class="fa fa-bars"></i>
			</div>
			
			<div class="my-account">
				<div class="column">
					<div class="image">
						<img src="{{ asset('bundles/ribsadmin/images/default-profile.png') }}" alt="">
					</div>
				</div>
				<div class="column">
					<div class="account-infos">
						<h3>{{ app.user.user.firstname }} {{ app.user.user.lastname }}</h3>
						<div class="functions">
							
							<div class="column">
								<div class="notif not-view">
									<a href=""><i class="fa fa-bell"></i></a>
								</div>
							</div>
							
							<div class="column">
								<div class="config">
									<a href=""><i class="fa fa-gear"></i></a>
								</div>
							</div>
							<div class="column">
								<div class="logout">
									<a href="{{ path('ribs_admin_logout') }}"><i class="fa fa-sign-out"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

            {{ render(controller("RibsAdminBundle:NavigationBuilder:getLeftNavigation")) }}
		</nav>
		
		<header>
			<div class="inner displayed-nav">
				{% block title_page %}
					<h1>Dashboard</h1>
				{% endblock %}
			</div>
		</header>
		
		{% block nav_page %}
		
		{% endblock %}
		
		<div class="inner displayed-nav">
			{% block body %}
			
			{% endblock %}
		</div>
		
		{% for message in app.session.flashBag.get('error-flash') %}
			{% include "@RibsAdmin/flash-messages.html.twig" with {"message": message, "type": "error"} %}
		{% endfor %}
		
		{% for message in app.session.flashBag.get('info-flash') %}
			{% include "@RibsAdmin/flash-messages.html.twig" with {"message": message, "type": "info"} %}
		{% endfor %}
		
		{% for message in app.session.flashBag.get('success-flash') %}
			{% include "@RibsAdmin/flash-messages.html.twig" with {"message": message, "type": "success"} %}
		{% endfor %}
		
		<div class="ribs-popup" id="delete-element" data-ribspopup>
			<div class="content">
				<div id="set-content">
					<h2>Are you sure you want to delete this item ?</h2>
					<p class="warning">You can't go back if you delete !</p>
				</div>
				
				<div class="link">
					<a class="cancel" data-close>Cancel</a>
					<a href="#" class="validate"  data-validate>Validate</a>
				</div>
				<div class="clear"></div>
			</div>
		</div>
		
		{% block javascripts %}
			<script src="{{ asset('build/ribs-admin-bundle/js/vendor.js') }}"></script>
			<script src="{{ asset('build/ribs-admin-bundle/js/main.js') }}"></script>
		{% endblock %}
	</body>
</html>
